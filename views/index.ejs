<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script> 
  
   
  </head>
  <body>
    <% if (success !='') {%>
    <div class="alert alert-success">
      <strong>Success!</strong> <%= success %>
    </div>
    <% } %>
    <h1>Filter Employee Records</h1>
     <div class="col-md-12">
    <form action="/search/" method="POST"  role="form">
        <div class="col-md-3">
        <div class="form-group">
            <label for="name">By Name</label>
             <div class="col-md-12">
                <input type="text" id="searchName" class="form-control" name="fltrname" placeholder="Enter Name">
            </div>
        </div>
    </div>

        <div class="col-md-3">
          <div class="form-group">
            <label for="email">By Email</label>
            <div class="col-md-12">
               <input type="text" class="form-control" name="fltremail" placeholder="Enter Email">
           </div>
       </div>
    </div>
 
       
   <div class="col-md-3">
          <div class="form-group">
              <label for="email">&nbsp;</label>
             
                <div class="col-md-12">
                  <input type="submit" class="form-control btn btn-primary" name="submit" placeholder="Filter">
              </div>
        </div>
      </div>
        
    </form>






    <h1><%= title %></h1>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Email</th>
          <th>Country</th>
          <th>Totalamount</th>
          <th>Totalhours</th>
          <th>Total</th>
          <th>Action</th>
        </tr>
      </thead>
      <% records.forEach(function(row){%>
      <tr>
        <td><%= row.name %></td>
        <td><%= row.age %></td>
        <td><%= row.email %></td>
        <td><%= row.country %></td>
        <td><%= row.totalamount %></td>
        <td><%= row.totalhours %></td>    
        <td><%= row.total %></td>
        <td>
          <a class="btn btn-primary btn-xs" href="/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
          <a class="btn btn-danger btn-xs" href="/delete/<%= row._id %>"><i class="fa fa-trash"></i></a>
      </td>
        
       
      </tr>
      <% })%>
    </table>

    <div class="container">
      <div class="row">
          <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      <div class="panel-title"><h3>Employee Details Form</h3></div>
                       </div>  
                  <div class="panel-body" >
                      <form action="/" class="form-horizontal" method="POST" >
                          
                          <div id="signupalert" style="display:none" class="alert alert-danger">
                              <p>Error:</p>
                              <span></span>
                          </div>
                              
                          <div class="form-group">
                              <label for="name" class="col-md-3 control-label">Name</label>
                              <div class="col-md-9">
                                  <input type="text" class="form-control" name="uname" placeholder="Enter Your Name">
                              </div>
                          </div>
                            
                          <div class="form-group">
                            <label for="age" class="col-md-3 control-label">Age</label>
                            <div class="col-md-9">
                                <input type="Number" class="form-control" name="age" placeholder="Enter Your Age">
                            </div>
                        </div>

                          <div class="form-group">
                              <label for="email" class="col-md-3 control-label">Email</label>
                              <div class="col-md-9">
                                  <input type="text" class="form-control" name="email" placeholder="Email Address">
                              </div>
                          </div>
                              
                          
                          
                          <div class="form-group">
                              <label for="country" class="col-md-3 control-label">Country</label>
                              <div class="col-md-9">
                                  <input type="text" class="form-control" name="country" placeholder="Enter your country">
                              </div>
                          </div>
                              
                          <div class="form-group">
                              <label for="icode" class="col-md-3 control-label"> Total Amount</label>
                              <div class="col-md-9">
                                  <input type="Number" class="form-control" name="totalamount" placeholder="Enter Total Amount">
                              </div>
                          </div>

                          <div class="form-group">
                            <label for="icode" class="col-md-3 control-label"> Total Hours</label>
                            <div class="col-md-9">
                                <input type="Number" class="form-control" name="totalhours" placeholder="Enter Total Hours">
                            </div>
                        </div>

               <!--   <div class="form-group">
                          <label for="icode" class="col-md-3 control-label"> Total</label>
                          <div class="col-md-9">
                              <input type="text" class="form-control" name="total" placeholder=" Total ">
                          </div>
                      </div>-->
  

  
                          <div class="form-group">
                              <!-- Button  -->                                      
                              <div class="col-md-offset-3 col-md-9">
                              <input type="submit" name="submit" value="submit" class="btn btn-primary">   
                              </div>
                          </div>
                          
                          
                          
                          
                          
                      </form>
                   </div>
              </div>



    
  </body>
</html>
